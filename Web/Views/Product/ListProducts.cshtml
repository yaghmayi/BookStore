@using LightStore.Models
@using LightStore.Web.Security
@model LightStore.Models.ProductSearch

<html>

    <form method="POST">
        <div class="container ">
            <div class="col-sm-12" style="border: solid gainsboro">
                @Html.Partial("ProductSearchPanel", Model)
            </div>
        
            <div class="col-sm-12" style="margin-top: 3px; margin-bottom: 2px">
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        
            <div class="col-sm-12">
                <div class="row clearfix">
                    @foreach (Product product in ((List<Product>)ViewData["Products"]))
                    {
                        @Html.Partial("ProductSummary", product)
                    }
                </div>
            </div>
        </div>
    </form>
</html>