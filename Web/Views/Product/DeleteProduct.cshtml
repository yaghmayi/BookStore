@using LightStore.Web
@using LightStore.Web.Security
@model LightStore.Models.EditProductViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <link href="../../Content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="../../Content/Bootstrap/js/bootstrap.min.js" type="text/javascript"></script>  
</head>

    

<form method="POST">
    <div class="container">
        <div class="col-sm-12">
            <h2>Delete Product</h2>
        </div>
        <div class="col-sm-12" style="border: solid gainsboro">
            <div class="col-sm-6">
                <div class="row clearfix" style="visibility: hidden; height: 0px">
                    <div>
                        <input name="Code" type="text" value="@Model.Code" />
                        <input name="CategoryCode" type="text" value="@Model.CategoryCode" />
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12 col-xs-12" style="margin-top: 3px" >
                        @Html.LabelFor(model => model.Code)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Code" type="text" disabled="disabled" style="margin-bottom: 2px; margin-top: 3px" />
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Title)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Title" type="text" disabled="disabled" style="margin-bottom: 2px" />
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Price)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Price" type="text" disabled="disabled" style="margin-bottom: 2px"/>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Description" type="text" disabled="disabled" style="margin-bottom: 2px"/>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Length)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Length" type="text" disabled="disabled" style="margin-bottom: 2px"/>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Width)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Width" type="text" disabled="disabled" style="margin-bottom: 2px" />
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Height)
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <input value="@Model.Height" type="text" disabled="disabled" style="margin-bottom: 2px" />
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        @Html.LabelFor(model => model.Colors)   
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        @LightStotreHtmHelper.DisplayColors(Model.Colors)
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="row clearfix">
                    <div class="col-sm-4 col-xs-12">
                        <b>Pic</b>
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <img src="/Product/ShowPhoto/@Model.Code"  />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12" style="margin-top: 3px">
            @{
                if (AuthorizeHelper.IsCurrentUserAdmin())
                {
                    <input type="submit" value="Delete"/>
                    @Html.Label(" | ")
                }   
            }
            @Html.ActionLink("Back to List", "ListProducts", "Product", new {categoryCode = @Model.CategoryCode}, null)
        </div>
    </div>
</form>