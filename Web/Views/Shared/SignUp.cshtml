@using BookStore.Web
@{
    ViewBag.Title = "Register";
}

<head>
    <link href="~/Content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/SignUp.js"></script>
    <script src="~/Content/Scripts/Session.js"></script>
</head>

<html>
    <form>
        <div class="col-xs-12" style="min-width: 200px">

            <div>
                <input type="text" name="UserEmail" id="UserEmail" placeholder="Email" class="form-control" />
            </div>

            <div>
                <input type="password" name="UserPassword" id="UserPassword" placeholder="Password" class="form-control" />
            </div>

            <div>
                <input type="password" name="UserRepassword" id="UserRepassword" placeholder="Re Password" class="form-control" />
            </div>

            <div style="margin-top: 10px" />

            <div>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm"
                        onclick="SignUp(document.getElementById('UserEmail').value,
                                        document.getElementById('UserPassword').value,
                                        document.getElementById('UserRepassword').value)">
                    Sign Up
                </button>
            </div>
        </div>
    </form>
</html>
