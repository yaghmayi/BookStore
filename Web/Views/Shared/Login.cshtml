@using BookStore.Web
@{
    ViewBag.Title = "Login";
}

<head>
    <link href="~/Content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/Login.js"></script>
    <script src="~/Content/Scripts/Session.js"></script>
</head>

<html>
    <form style="min-width: 200px">
        @{
            string panelClass = "col-lg-12";
            bool loginUrl = CommonUtils.GetCurrentPageName() == "Login".ToLower();

            if (loginUrl)
            {
                panelClass = "col-sm-12 col-md-6";
            }
        }
        <div class="@panelClass">
            <div>
                <input type="text" name="Email" id="Email" class="form-control" placeholder="Email" />
            </div>

            <div>
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" />
            </div>

            <div style="margin-top: 10px" />

            <div>
                @{
                    string redirectPage = "";
                    if (loginUrl)
                    {
                        redirectPage = "ShopList";
                    }
                }

                <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm"
                        onclick="Login(document.getElementById('Email').value, document.getElementById('Password').value, '@redirectPage')">
                    Login
                </button>

                @if (loginUrl)
                {
                    <a href="SignUp">Sign Up</a>
                }
            </div>

            <div style="margin-top: 2px" />

            <div id="loginFailMessage">
            </div>
        </div>

    </form>
</html>
